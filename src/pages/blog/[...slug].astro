---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Image from '../../components/Image.astro';
import { siteImages, getImage } from '../../config/images';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.publishDate).toLocaleDateString('fr-FR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Get other posts for recommendations
const allPosts = await getCollection('blog');
const otherPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

// Get hero image with fallback
const heroImage = getImage(post.data.image || siteImages.blog.defaultHero, 'hero');
---

<Layout title={post.data.title} description={post.data.description}>
  <!-- Hero Section with Image -->
  <section class="relative">
    {post.data.image && (
      <div class="absolute inset-0 h-96 lg:h-[32rem]">
        <Image
          src={heroImage}
          alt={post.data.title}
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-ocean-blue/70 via-ocean-blue/80 to-ocean-blue"></div>
      </div>
    )}
    <div class={`${post.data.image ? 'relative pt-48 pb-20 lg:pt-64' : 'bg-gradient-to-b from-ocean-blue to-blue-800 py-20'}`}>
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="font-heading font-bold text-3xl md:text-5xl text-white mb-6 animate-fade-in">
            {post.data.title}
          </h1>
        <div class="flex items-center justify-center space-x-4 text-white/80 font-body animate-fade-in">
          <time datetime={post.data.publishDate.toISOString()}>
            {formattedDate}
          </time>
          <span>•</span>
          <span>{post.data.author}</span>
        </div>
        {post.data.tags && (
          <div class="flex flex-wrap justify-center gap-2 mt-4 animate-fade-in">
            {post.data.tags.map((tag) => (
              <span class="inline-block bg-white/20 text-white px-3 py-1 rounded-full text-sm font-body">
                #{tag}
              </span>
            ))}
          </div>
        )}
        </div>
      </div>
    </div>
  </section>

  <!-- Article Content -->
  <article class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto prose prose-lg prose-ocean">
        <Content />
      </div>
    </div>
  </article>

  <!-- Share Section -->
  <section class="py-8 bg-light-beige">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h3 class="font-heading font-semibold text-xl text-ocean-blue mb-4">
          Partagez cet article
        </h3>
        <div class="flex justify-center space-x-4">
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue-600 text-white p-3 rounded-full hover:bg-blue-700 transition-colors"
            aria-label="Partager sur Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(post.data.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-black text-white p-3 rounded-full hover:bg-gray-800 transition-colors"
            aria-label="Partager sur Twitter"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue-700 text-white p-3 rounded-full hover:bg-blue-800 transition-colors"
            aria-label="Partager sur LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  {otherPosts.length > 0 && (
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="font-heading font-bold text-3xl text-ocean-blue text-center mb-8">
            Articles similaires
          </h2>
          <div class="grid md:grid-cols-3 gap-8">
            {otherPosts.map((relatedPost) => {
              const relatedDate = new Date(relatedPost.data.publishDate).toLocaleDateString('fr-FR', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              });
              
              return (
                <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                  <div class="h-32 bg-gradient-to-br from-blue-400 to-blue-600"></div>
                  <div class="p-6">
                    <time class="text-sm text-gray-500 font-body">
                      {relatedDate}
                    </time>
                    <h3 class="font-heading font-semibold text-lg text-ocean-blue mt-2 mb-3 line-clamp-2">
                      {relatedPost.data.title}
                    </h3>
                    <a 
                      href={`/blog/${relatedPost.slug}`}
                      class="inline-flex items-center text-primary-orange hover:text-orange-600 font-body font-semibold transition-colors"
                    >
                      Lire l'article
                      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Call to Action -->
  <section class="py-20 bg-ocean-blue">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
        Passez à l'action
      </h2>
      <p class="font-body text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        Vous aussi, participez à la protection des océans
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/don" class="inline-block bg-donate-red text-white px-10 py-4 rounded-lg font-body font-semibold text-lg hover:bg-red-700 transform hover:scale-105 transition-all shadow-xl">
          FAIRE UN DON
        </a>
        <a href="/missions" class="inline-block bg-white text-ocean-blue px-10 py-4 rounded-lg font-body font-semibold text-lg hover:bg-gray-100 transform hover:scale-105 transition-all shadow-xl">
          DÉCOUVRIR NOS MISSIONS
        </a>
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  .prose {
    max-width: 65ch;
    color: #374151;
    font-family: 'Lato', sans-serif;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    font-family: 'Montserrat', sans-serif;
    color: #0A2342;
    font-weight: 700;
  }
  
  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.875rem;
  }
  
  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  .prose ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }
  
  .prose ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose strong {
    color: #0A2342;
    font-weight: 600;
  }
  
  .prose a {
    color: #F9A825;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #f59e0b;
  }
  
  .prose blockquote {
    border-left: 4px solid #F9A825;
    padding-left: 1rem;
    font-style: italic;
    color: #6b7280;
    margin: 1.5rem 0;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>