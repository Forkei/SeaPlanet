---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Image from '../../components/Image.astro';
import { siteImages, getImage } from '../../config/images';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout title="Blog">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-ocean-blue to-blue-800 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="font-heading font-bold text-4xl md:text-6xl text-white mb-6 animate-fade-in">
        Notre Blog
      </h1>
      <p class="font-body text-xl text-white/90 max-w-3xl mx-auto animate-fade-in">
        Suivez nos actions, découvrez nos projets et apprenez-en plus sur la protection des océans
      </p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post) => {
          const formattedDate = new Date(post.data.publishDate).toLocaleDateString('fr-FR', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          });
          
          const thumbnailImage = getImage(post.data.image || siteImages.blog.defaultThumbnail, 'thumbnail');

          return (
            <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow animate-on-scroll">
              <div class="h-48 relative overflow-hidden">
                {post.data.image ? (
                  <Image
                    src={thumbnailImage}
                    alt={post.data.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="h-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                    <svg class="w-20 h-20 text-white/50" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-2">
                  <time datetime={post.data.publishDate.toISOString()}>
                    {formattedDate}
                  </time>
                  <span class="mx-2">•</span>
                  <span>{post.data.author}</span>
                </div>
                
                <h2 class="font-heading font-semibold text-xl text-ocean-blue mb-3 line-clamp-2">
                  {post.data.title}
                </h2>
                
                <p class="font-body text-gray-700 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                {post.data.tags && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="inline-block bg-light-beige text-ocean-blue px-3 py-1 rounded-full text-xs font-body">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary-orange hover:text-orange-600 font-body font-semibold transition-colors"
                >
                  Lire la suite
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          );
        })}
      </div>
      
      {sortedPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="font-body text-gray-500 text-lg">
            Aucun article pour le moment. Revenez bientôt !
          </p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20 bg-light-beige">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <div class="animate-on-scroll">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-ocean-blue mb-4">
          Restez informé
        </h2>
        <div class="text-primary-orange text-3xl mb-6">~~~</div>
        <p class="font-body text-lg text-gray-700 mb-8">
          Inscrivez-vous à notre newsletter pour recevoir nos dernières actualités et nos prochains événements
        </p>
        <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            placeholder="Votre adresse email"
            class="flex-grow px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-primary-orange font-body"
            required
          />
          <button 
            type="submit"
            class="bg-primary-orange text-white px-6 py-3 rounded-lg font-body font-semibold hover:bg-yellow-600 transform hover:scale-105 transition-all"
          >
            S'inscrire
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>